<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.select :name, ["", "Porsche", "BMW", "Jaguar", "Bentley", "Mercedes Benz"] %>
  </div>
  <div class="field">
    <%= f.label "Number of Seats" %><br />
    <%= f.select  :numSeats, [2, 5, 7] %>
  </div>
  <div class="field">
    <%= f.label :cost %><br />
    <%= f.text_field :cost %>
  </div>
  <div class="field">
    <%= f.label :colour %><br />
    <%= f.select :colour, ["Green", "Blue", "White", "Black"]%>
  </div>
  <div class="field">
    <%= f.label :automatic %><br />
    <%= f.check_box :automatic %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.collection_select :user_id, User.all, :id, :lastName, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :location_id %><br />
    <%= f.collection_select :location_id, Location.all, :id, :address %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
